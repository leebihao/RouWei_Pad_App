<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    android:orientation="vertical">

    <include
        android:id="@+id/title_layout"
        layout="@layout/layout_title_bar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_40"
        android:paddingTop="@dimen/dp_20">

        <RelativeLayout
            android:id="@+id/rl_negativeicon"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:background="@color/grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_negativeicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_negative_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:padding="5dp"
                android:text="负离子"
                android:textColor="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_uv"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:background="@color/grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rl_negativeicon">

            <ImageView
                android:id="@+id/iv_uv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_uv_p" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:padding="5dp"
                android:text="紫外线灯"
                android:textColor="@color/white" />

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <CheckedTextView
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:drawableTop="@drawable/icon_home"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="center_horizontal"
        android:text="桌面"
        android:textColor="@color/white" />
</LinearLayout>