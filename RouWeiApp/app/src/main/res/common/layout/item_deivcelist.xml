<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_devices_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:background="@color/devices_title_bg_color"
        android:text="www"
        android:textSize="@dimen/dp_15"
        android:textColor="@color/white"
        android:paddingLeft="@dimen/dp_10"/>


    <RelativeLayout
        android:id="@+id/deviceItemRootView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/deviceItemLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/icon_devices_def"
            android:layout_centerVertical="true"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_centerVertical="true"
            android:orientation="vertical">


            <TextView
                android:id="@+id/deviceItemLabelTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WiFi插座"
                android:textColor="@color/blue"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/deviceItemStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="初始化.."
                android:textColor="@color/blue"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>


    </RelativeLayout>



</LinearLayout>